@model EditUserViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="edit .css">
    <title>Edit Profile</title>
    <style>
        :root {
            --orange: #edab11;
            --black: #333333;
            --grey: #f2f2f2;
            --white: #ffffff;
            --dark-grey: #afafaf;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--grey);
            color: var(--black);
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: var(--white);
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .header {
            background-color: var(--orange);
            color: var(--white);
            text-align: center;
            padding: 30px;
            font-size: 28px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .form {
            padding: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: var(--black);
            }

            .form-group input, .form-group textarea, .form-group select {
                width: 100%;
                padding: 12px;
                border: 1px solid var(--dark-grey);
                border-radius: 8px;
                font-size: 16px;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .form-group input:focus, .form-group textarea:focus, .form-group select:focus {
                    border-color: var(--orange);
                    outline: none;
                    box-shadow: 0 0 8px rgba(237, 171, 17, 0.5);
                }

        .form-actions {
            text-align: center;
            margin-top: 30px;
        }

            .form-actions a {
                padding: 12px 25px;
                text-decoration: none;
                border-radius: 8px;
                font-size: 18px;
                cursor: pointer;
                color: var(--white);
                background-color: var(--orange);
                transition: background-color 0.3s, transform 0.2s;
                display: inline-block;
            }

                .form-actions a:hover {
                    background-color: var(--black);
                    transform: translateY(-3px);
                }

                .form-actions a:active {
                    transform: translateY(0);
                }
    </style>

</head>
<body>
    <div class="container">
        <div class="header">
            Edit Your Profile
        </div>
        <form asp-action="EditUser" asp-controller="User" enctype="multipart/form-data">
        <div class="form" >
            <div class="form-group">
                <label for="username">First Name</label>
                <input  asp-for="Fname" id="username" placeholder="Enter your Full Name">
                <span asp-validation-for="Fname"></span>
            </div>
            <div class="form-group">
                <label for="username">Last Name</label>
                <input asp-for="Lname" id="username" placeholder="Enter your Full Name">
                    <span asp-validation-for="Lname"></span>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input asp-for="Email" id="email" placeholder="Enter your email">
                    <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label for="phone">Phone</label>
                <input asp-for="PhoneNumber" id="phone" placeholder="Enter your phone number">
                    <span asp-validation-for="PhoneNumber"></span>
            </div>

            <div class="form-group">
                <label for="photo">Choose Your Photo</label>
                <input asp-for="ImageFile" id="photo" accept="image/*">
                    <span asp-validation-for="ImageFile"></span>
            </div>

            <div class="form-actions">
                
                    <button type="submit" class="btn" style="background-color: rgba(237, 171, 17, 0.5); border: none; color: white;padding: 15px 30px; font-size: 18px; ">Save Changes</button>
                    
            </div>
        </div>
        </form>
    </div>
</body>
</html>
