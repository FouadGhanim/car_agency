    <title>Add Car</title>
</head>
<body>
    
   
    
    
        <div class="modal-dialog">
            <div class="modal-content">

            <form asp-action="Pay" asp-controller="Landing">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Advertisements</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Advertisement Types -->
                    <div class="row flex justify-content-between">
                        <div class="form-check col">
                            <input class="form-check-input ms-2 mb-2" asp-for="AdvertisementType" type="radio" value="30" id="flexCheckDefault1">
                            <label class="form-check-label" for="flexCheckDefault1">
                                <h5><strong>Featured Advertisement</strong></h5>
                                <p>Make your ad stand out for 10 days, plus 90 additional days as a basic ad.</p>
                                <p class="price"><strong>Price: $30</strong></p>
                            </label>
                        </div>
                        <div class="form-check col">
                            <input class="form-check-input ms-2 mb-2" asp-for="AdvertisementType" type="radio" value="20" id="flexCheckDefault2">
                            <label class="form-check-label" for="flexCheckDefault2">
                                <h5><strong>Main Advertisement</strong></h5>
                                <p>Add your car as a Main Advertisement for 90 days.</p>
                                <p class="price"><strong>Price: $20</strong></p>
                            </label>
                        </div>
                        <div class="form-check col">
                            <input class="form-check-input ms-2 mb-2" asp-for="AdvertisementType" type="radio" value="10" id="flexCheckDefault3">
                            <label class="form-check-label" for="flexCheckDefault3">
                                <h5><strong>Economic Advertisement</strong></h5>
                                <p>Featured ad for 90 days, with repost after 3 days.</p>
                                <p class="price"><strong>Price: $10</strong></p>
                            </label>
                        </div>
                    </div>

                    
                    <div class="payment mt-4">
                        <label for="CardNumber" class="form-label">Credit Card</label>
                        <input asp-for="CardNumber" id="CardNumber" class="form-control" type="text" placeholder="Enter your card number" required>
                        <label for="CVV" class="form-label mt-2">CVV</label>
                        <input asp-for="CVV" id="CVV" class="form-control" type="number" placeholder="Enter CVV" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Pay</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>

            </div>
        </div>
    

    <script>



        document.querySelector('.attachment input[type="file"]').addEventListener('change', (event) => {
            const fileInput = event.target;
            const attachment = fileInput.closest('.attachment');
            const btnFile = attachment.querySelector('.btn-file');

            const btnFileActions = btnFile.querySelector('.btn-file__actions__item');
            if (btnFileActions) {
                btnFileActions.style.padding = '135px';
            }

            const btnFilePreview = btnFile.querySelector('.btn-file__preview');
            if (btnFilePreview && fileInput.files[0]) {
                btnFilePreview.style.backgroundImage = `url(${window.URL.createObjectURL(fileInput.files[0])})`;
            }
        });

    </script>
